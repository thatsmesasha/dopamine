# Hyperparameters follow Hessel et al. (2018).
import dopamine.agents.rainbow.rainbow_agent
import dopamine.agents.dqn.dqn_agent
import dopamine.discrete_domains.unity_lib
import dopamine.discrete_domains.run_experiment
import dopamine.replay_memory.prioritized_replay_buffer
import dopamine.replay_memory.circular_replay_buffer
import gin.tf.external_configurables

RainbowAgent.num_atoms = 51
RainbowAgent.vmax = 10.
RainbowAgent.gamma = 0.99
RainbowAgent.update_horizon = 3
RainbowAgent.min_replay_history = 2000  # agent steps
RainbowAgent.update_period = 4
RainbowAgent.target_update_period = 500  # agent steps
RainbowAgent.epsilon_train = 0.01
RainbowAgent.epsilon_eval = 0.001
RainbowAgent.epsilon_decay_period = 20000  # agent steps
RainbowAgent.replay_scheme = 'prioritized'
RainbowAgent.tf_device = '/gpu:0'  # use '/cpu:*' for non-GPU version
RainbowAgent.optimizer = @tf.train.AdamOptimizer()

# Note these parameters are different from C51's.
tf.train.AdamOptimizer.learning_rate = 0.0000625
tf.train.AdamOptimizer.epsilon = 0.00015

create_otc_environment.environment_path = '../ObstacleTower/obstacletower'
create_agent.agent_name = 'rainbow'
create_agent.num_actions = 3
Runner.create_environment_fn = @unity_lib.create_otc_environment
Runner.num_iterations = 200
Runner.training_steps = 2000  # agent steps
Runner.evaluation_steps = 1000  # agent steps
Runner.max_steps_per_episode = 5000  # agent steps

WrappedPrioritizedReplayBuffer.replay_capacity = 5000
WrappedPrioritizedReplayBuffer.batch_size = 32
OutOfGraphReplayBuffer.num_actions = 3

DQNAgent.max_tf_checkpoints_to_keep=100
